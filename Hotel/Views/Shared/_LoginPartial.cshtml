@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<ul class="navbar-nav">
    @*     <li class="nav-item">
        <a class="nav-link text-dark">Hello</a>
    </li> *@
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark">Hello @UserManager.GetUserName(User) !</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="LogOut">  LogOut</a>

        </li>
    }
    else
    {

        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Login" asp-controller="Account">
                Login
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Register" asp-controller="Account">
                Register
            </a>
        </li>
    }


</ul>
