@model Villa
@{
    ViewData["title"] = "Create Villa";
}

<div class="container my-5">
    <div class="card p-4 shadow-lg">
        <h1 class="text-center mb-4 text-primary fw-bold">Create a New Villa</h1>

        <form asp-action="Create" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-medium">Villa Name</label>
                <input asp-for="Name" class="form-control rounded-3" placeholder="e.g., Sunset Haven" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-medium">Description</label>
                <textarea asp-for="Description" class="form-control rounded-3" rows="4" placeholder="Describe the villa..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label fw-medium">Price</label>
                <input asp-for="Price" type="number" step="0.5" min="1"  class="form-control rounded-3"  placeholder="Choose a Price .."/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Occupancy" class="form-label fw-medium">Occupancy</label>
                <input asp-for="Occupancy" type="number" class="form-control rounded-3" placeholder="Enter an Occupancy .." />
                <span asp-validation-for="Occupancy" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Sqft" class="form-label fw-medium"></label>
                <input asp-for="Sqft"  class="form-control rounded-3"  />
                <span asp-validation-for="Sqft" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ImageUrl" class="form-label fw-medium">Image URL</label>
                <input asp-for="ImageUrl" class="form-control rounded-3" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="row g-2 justify-content-end">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary w-100 rounded-3">
                        <i class="bi bi-check-circle me-1"></i> Create Villa
                    </button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-action="Index" asp-controller="Villa" class="btn btn-secondary w-100 rounded-3">
                        <i class="bi bi-x-circle me-1"></i> Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}