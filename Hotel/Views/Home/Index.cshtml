@model HomeVM
@{
    ViewData["Title"] = "Welcome to Our Villas";
}

<!-- Carousel Slider  -->
<div class="container-fluid p-0 mb-5">
    <div id="villaCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-wrap="true" data-bs-interval="5000">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#villaCarousel" data-bs-slide-to="0" class="active" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#villaCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#villaCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item">
                <img src="https://images.unsplash.com/photo-1596436889106-be35e843f974?q=80&w=2070&auto=format&fit=crop"
                     class="d-block w-100" alt="Oceanfront Views" style="max-height: 500px; object-fit: cover;">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="text-white fw-bold">Breathtaking Views</h5>
                    <p class="text-white">Wake up to the sound of the ocean.</p>
                </div>
            </div>
            <div class="carousel-item active">
                <img src="~/Images/Sliders/1.jpg"
                     class="d-block w-100" alt="Luxurious Poolside Retreat" style="max-height: 500px; object-fit: cover;">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="text-white fw-bold">Unwind in Luxury</h5>
                    <p class="text-white">Experience our stunning poolside retreats.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?q=80&w=2070&auto=format&fit=crop"
                     class="d-block w-100" alt="Gourmet Dining" style="max-height: 500px; object-fit: cover;">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="text-white fw-bold">Culinary Delights</h5>
                    <p class="text-white">Savor exquisite meals prepared by top chefs.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#villaCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#villaCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

<!-- Check-in/Check-out Form -->
<div class="container mb-5">
    <div class="card shadow-lg border-0 p-4">
        <h3 class="text-center text-primary fw-bold mb-4">Plan Your Stay</h3>
        <form asp-action="Index" method="post" class="row g-3 " novalidate>
            <div class="col-md-4">
                <div class="form-floating">
                    <input asp-for="CheckInDate" type="date" class="form-control rounded-3 border-primary-subtle"
                           min="@DateOnly.FromDateTime(DateTime.Now).ToString("yyyy-MM-dd")" required />
                    <label asp-for="CheckInDate" class="text-muted">Check-in Date</label>
                    <span asp-validation-for="CheckInDate" class="text-danger small mt-1 d-block"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-floating">
                    <input asp-for="Nights" type="number" class="form-control rounded-3 border-primary-subtle"
                           min="1" max="30" required />
                    <label asp-for="Nights" class="text-muted">Nights</label>
                    <span asp-validation-for="Nights" class="text-danger small mt-1 d-block"></span>
                </div>
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary btn-lg rounded-pill w-100 py-2">
                    <i class="bi bi-search me-2"></i>Check Availability
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Villa List with Amenities -->
<div class="container mb-5">
    <h2 class="text-center text-primary fw-bold mb-4 display-6">Our Villas</h2>
    @if (!Model.VillaList.Any())
    {
        <div class="text-center text-muted py-3">
            <p>No villas available at this time.</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var villa in Model.VillaList)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="@(string.IsNullOrEmpty(villa.ImageUrl) ? "https://placehold.co/400x300/EEE/31343C" : villa.ImageUrl)"
                             class="card-img-top rounded-top" alt="@villa.Name" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title text-primary fw-bold">@villa.Name</h5>
                            <p class="card-text text-muted">@villa.Description?.Substring(0, Math.Min(villa.Description.Length, 100))@(villa.Description?.Length > 100 ? "..." : "")</p>
                            <ul class="list-unstyled">
                                <li><i class="bi bi-rulers me-2"></i>@villa.Sqft sqft</li>
                                <li><i class="bi bi-person me-2"></i>@villa.Occupancy guests</li>
                                <li><i class="bi bi-currency-dollar me-2"></i>@villa.Price.ToString("F2") per night</li>
                            </ul>
                            @if (villa.VillaAmenity != null && villa.VillaAmenity.Any())
                            {
                                <h6 class="mt-3 fw-bold text-muted">Amenities:</h6>
                                <ul class="list-inline">
                                    @foreach (var amenity in villa.VillaAmenity.Take(3))
                                    {
                                        <li class="list-inline-item">
                                            <span class="badge bg-primary-subtle text-primary rounded-pill">@amenity.Name</span>
                                        </li>
                                    }
                                    @if (villa.VillaAmenity.Count() > 3)
                                    {
                                        <li class="list-inline-item">
                                            <span class="badge bg-primary-subtle text-primary rounded-pill">+@(villa.VillaAmenity.Count() - 3) more</span>
                                        </li>
                                    }
                                </ul>
                            }
                        </div>
                        <div class="card-footer bg-transparent border-0 d-flex gap-2">
                            <button type="button" class="btn btn-outline-primary rounded-pill w-50" data-bs-toggle="modal" data-bs-target="#detailsModal-@villa.Id">
                                <i class="bi bi-eye me-2"></i>Details
                            </button>
                            <button type="button" class="btn btn-success rounded-pill w-50 book-btn" data-villa-id="@villa.Id">
                                <i class="bi bi-bookmark me-2"></i>Book
                            </button>
                        </div>
                    </div>

                    <!-- Modal for Villa Details -->
                    <div class="modal fade" id="detailsModal-@villa.Id" tabindex="-1" aria-labelledby="detailsModalLabel-@villa.Id" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="detailsModalLabel-@villa.Id">@villa.Name</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <img src="@(string.IsNullOrEmpty(villa.ImageUrl) ? "https://placehold.co/400x300/EEE/31343C" : villa.ImageUrl)"
                                                 class="img-fluid rounded" alt="@villa.Name" style="max-height: 300px; object-fit: cover;" />
                                        </div>
                                        <div class="col-md-6">
                                            <dl>
                                                <dt>Square Footage</dt>
                                                <dd>@villa.Sqft sqft</dd>
                                                <dt>Occupancy</dt>
                                                <dd>@villa.Occupancy guests</dd>
                                                <dt>Price per Night</dt>
                                                <dd>@villa.Price.ToString("F2")</dd>
                                                <dt>Description</dt>
                                                <dd>@(string.IsNullOrEmpty(villa.Description) ? "No description available" : villa.Description)</dd>
                                                @if (villa.VillaAmenity != null && villa.VillaAmenity.Any())
                                                {
                                                    <dt>Amenities</dt>
                                                    <dd>
                                                        <ul class="list-unstyled">
                                                            @foreach (var amenity in villa.VillaAmenity)
                                                            {
                                                                <li>@amenity.Name</li>
                                                            }
                                                        </ul>
                                                    </dd>
                                                }
                                            </dl>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-success book-btn" data-villa-id="@villa.Id">Book Now</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Bootstrap form validation
        (function () {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();

        // Placeholder for Book button action
        document.querySelectorAll('.book-btn').forEach(button => {
            button.addEventListener('click', function () {
                const villaId = this.getAttribute('data-villa-id');
                console.log(`Booking villa with ID: ${villaId}`);
                // Add your booking action here later, e.g., redirect to booking page
                // window.location.href = `/Booking/Create?villaId=${villaId}`;
            });
        });
    </script>
}